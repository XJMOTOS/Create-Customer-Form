<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	xmlns:microchart="sap.suite.ui.microchart">
	<forms:SimpleForm
		labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
		emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0"
		columnsXL="2" columnsL="1" columnsM="1"
		editable="false"
		layout="ResponsiveGridLayout"
		adjustLabelSpan="false"
		singleContainerFullSize="false">
		<forms:content>
			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblName} 1"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipName1}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					enabled="{view>/enabled/secondary}"
					maxLength="35"
					value="{customer>/general/name1}"
					valueState="{= ${customer>/general/name1} ? 'None' : 'Error' }">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginBegin"
					decorative="false"
					press=".onShowName"
					src="sap-icon://sys-add">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				text="{i18n>lblName} 2"
				visible="{view>/show/name2}"/>
			<HBox visible="{view>/show/name2}">
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipName2}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					enabled="{view>/enabled/secondary}"
					maxLength="35"
					value="{customer>/general/name2}">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginBegin"
					decorative="false"
					press=".onHideName($event,2)"
					src="sap-icon://sys-minus">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
			</HBox>

			<Label
				class="sapUiTinyMarginTop" 
				text="{i18n>lblName} 3"
				visible="{view>/show/name3}"/>
			<HBox visible="{view>/show/name3}">
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipName3}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					enabled="{view>/enabled/secondary}"
					maxLength="35"
					value="{customer>/general/name3}">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginBegin"
					decorative="false"
					press=".onHideName($event,3)"
					src="sap-icon://sys-minus">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				text="{i18n>lblName} 4"
				visible="{view>/show/name4}"/>
			<HBox visible="{view>/show/name4}">
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipName4}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					enabled="{view>/enabled/secondary}"
					maxLength="35"
					value="{customer>/general/name4}">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginBegin"
					decorative="false"
					press=".onHideName($event,4)"
					src="sap-icon://sys-minus">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblCountry}"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipCountry}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					enabled="{view>/enabled/secondary}"
					forceSelection="false"
					change=".onChangeCountry"
					selectedKey="{customer>/general/country}"
					items="{GWD_C_FORM_UI5>/ZFA1_CountrySet}"
					valueState="{= ${customer>/general/country} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{GWD_C_FORM_UI5>LAND1}" text="{GWD_C_FORM_UI5>LANDX}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblSearchTerm}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipSearchTerm}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					enabled="{view>/enabled/secondary}"
					value="{customer>/general/searchTerm}"
					valueState="{= ${customer>/general/searchTerm} ? 'None' : 'Error' }">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblLanguage}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipLanguage}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					enabled="{view>/enabled/secondary}"
					change=".onChangeLanguage"
					forceSelection="false"
					items="{GWD_C_FORM_UI5>/ZFA1_SPRASSet}"
					selectedKey="{customer>/general/language}"
					valueState="{= ${customer>/general/language} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{GWD_C_FORM_UI5>SPRSL}" text="{GWD_C_FORM_UI5>SPTXT}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				text="{i18n>lblClassification}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipClassification}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					enabled="{view>/enabled/secondary}"
					forceSelection="false"
					items="{customerClassifications>/}"
					selectedKey="{customer>/general/classification}"
					valueState="{= ${customer>/general/classification} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{customerClassifications>key}" text="{customerClassifications>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblTransportationZone}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipTransportationZone}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					enabled="{= ${view>/enabled/secondary} &amp;&amp; ${view>/enabled/transportationZone} }"
					forceSelection="false"
					items="{transportationZones>/}"
					selectedKey="{customer>/general/transportationZone}"
					valueState="{= ${customer>/general/transportationZone} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{transportationZones>Zone1}" text="{transportationZones>Vtext}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblIndustryKey}"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipIndustryKey}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					enabled="{view>/enabled/secondary}"
					forceSelection="false"
					selectedKey="{customer>/general/industryKey}"
					items="{GWD_C_FORM_UI5>/ZFA1_IndustrySet}"
					valueState="{= ${customer>/general/industryKey} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{GWD_C_FORM_UI5>BRSCH}" text="{GWD_C_FORM_UI5>BRTXT}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblTimeZone}"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipTimeZone}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					enabled="{view>/enabled/secondary}"
					forceSelection="false"
					selectedKey="{customer>/general/timeZone}"
					items="{timeZones>/}"
					valueState="{= ${customer>/general/timeZone} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{timeZones>key}" text="{timeZones>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

		</forms:content>
	</forms:SimpleForm>
</core:FragmentDefinition>
