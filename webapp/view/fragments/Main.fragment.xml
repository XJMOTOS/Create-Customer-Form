<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	xmlns:microchart="sap.suite.ui.microchart">
	<forms:SimpleForm
		labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
		emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0"
		columnsXL="2" columnsL="1" columnsM="1"
		editable="false"
		layout="ResponsiveGridLayout"
		adjustLabelSpan="false"
		singleContainerFullSize="false">
		<forms:content>
			<Label
				text="{i18n>lblHierarchyA} 1"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA1}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					forceSelection="false"
					selectedKey="{customer>/hierarchy/a1}"
					items="{hierarchies>/}"
					width="100%">
					<core:Item key="{hierarchies>key}" text="{hierarchies>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				text="{i18n>lblHierarchyA} 2"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA2}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					forceSelection="false"
					selectedKey="{customer>/hierarchy/a2}"
					items="{hierarchies>/}"
					width="100%">
					<core:Item key="{hierarchies>key}" text="{hierarchies>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				text="{i18n>lblHierarchyA} 3"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA3}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					forceSelection="false"
					selectedKey="{customer>/hierarchy/a3}"
					items="{hierarchies>/}"
					width="100%">
					<core:Item key="{hierarchies>key}" text="{hierarchies>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				text="{i18n>lblHierarchyA} 4"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA4}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					forceSelection="false"
					selectedKey="{customer>/hierarchy/a4}"
					items="{hierarchies>/}"
					width="100%">
					<core:Item key="{hierarchies>key}" text="{hierarchies>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				text="{i18n>lblHierarchyB} 1"
				class="sapUiTinyMarginTop"
				visible="{view>/show/hierarchyFields}"/>
			<HBox visible="{view>/show/hierarchyFields}">
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyB1}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					forceSelection="false"
					selectedKey="{customer>/hierarchy/b1}"
					items="{hierarchies>/}"
					width="100%">
					<core:Item key="{hierarchies>key}" text="{hierarchies>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

		</forms:content>
	</forms:SimpleForm>
</core:FragmentDefinition>
