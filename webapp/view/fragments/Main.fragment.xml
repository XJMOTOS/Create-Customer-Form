<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	xmlns:microchart="sap.suite.ui.microchart">
	<forms:SimpleForm
		labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
		emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0"
		columnsXL="2" columnsL="1" columnsM="1"
		editable="false"
		layout="ResponsiveGridLayout"
		adjustLabelSpan="false"
		singleContainerFullSize="false">
		<forms:content>
			<Button text="read oData" press=".read"/>
			<Label
				text="{i18n>lblAccountGroup}"
				class="sapUiTinyMarginTop"
				required="true"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipAccountGroup}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					change=".onChangeMain"
					forceSelection="false"
					items="{GWD_C_FORM_UI5>/ZFA1_BUS_ACC_GRPSet}"
					selectedKey="{customer>/main/accountGroup}"
					valueState="{= ${customer>/main/accountGroup} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{GWD_C_FORM_UI5>Ktokd}" text="{GWD_C_FORM_UI5>Description}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblCompanyCode}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipCompanyCode}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					change=".onChangeMain"
					forceSelection="false"
					items="{GWD_C_FORM_UI5>/ZFA1_COMPAN_CODESet}"
					selectedKey="{customer>/main/companyCode}"
					valueState="{= ${customer>/main/companyCode} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{GWD_C_FORM_UI5>Bukrs}" text="{GWD_C_FORM_UI5>Description}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblSalesOrganization}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipSalesOrganization}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					change=".onChangeSalesStructure"
					forceSelection="false"
					items="{GWD_C_FORM_UI5>/ZFA1_SALES_ORGSet}"
					selectedKey="{customer>/main/salesOrganization}"
					valueState="{= ${customer>/main/salesOrganization} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{GWD_C_FORM_UI5>Vkorg}" text="{GWD_C_FORM_UI5>Description}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblDistributtionChannel}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipDistributtionChannel}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					change=".onChangeSalesStructure"
					forceSelection="false"
					items="{distributtionChannels>/}"
					selectedKey="{customer>/main/distributtionChannel}"
					valueState="{= ${customer>/main/distributtionChannel} ? 'None' : 'Error' }"
					width="100%">
					<core:Item key="{distributtionChannels>key}" text="{distributtionChannels>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblDivision}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipDivision}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Select
					change=".onChangeMain"
					forceSelection="false"
					items="{divisions>/}"
					selectedKey="{customer>/main/division}"
					width="100%"
					valueState="{= ${customer>/main/division} ? 'None' : 'Error' }">
					<core:Item key="{divisions>key}" text="{divisions>text}"/>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Select>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblTaxNumber}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipTaxNumber}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					change=".onChangeTaxNumber"
					maxLength="16"
					value="{customer>/main/taxNumber}"
					valueState="{= ${customer>/main/taxNumber} ? 'None' : 'Error' }">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblVatRegistrationNumber}"/>
			<HBox>
				<core:Icon
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					decorative="false"
					src="sap-icon://hint"
					tooltip="{i18n>tooltipTaxRegistration}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					change=".onChangeVatRegistrationNumber"
					maxLength="20"
					value="{customer>/main/vatRegistrationNumber}"
					valueState="{= ${customer>/main/vatRegistrationNumber} ? 'None' : 'Error' }">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
			</HBox>

			<Label
				class="sapUiTinyMarginTop"
				required="true"
				text="{i18n>lblHierarchy}"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA4}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Input
					change=".onDisableSubmitButton"
					enabled="{view>/enabled/secondary}"
					value="{customer>/hierarchy/a4Text}"
					showValueHelp="true"
					valueHelpOnly="true"
					valueHelpRequest=".onHierarchy4HelpRequest"
					valueState="{= ${customer>/hierarchy/a4Key} ? 'None' : 'Error' }">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Input>
			</HBox>
		</forms:content>
	</forms:SimpleForm>
</core:FragmentDefinition>
