<core:FragmentDefinition
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	xmlns="sap.m">
	<Table 
		mode="Delete"
		delete=".onRemoveContactPerson"
		items="{customer>/contactPersons}"
		visible="{view>/show/generalFields}">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					enabled="{view>/enabled/secondary}"
					icon="sap-icon://add"
					press=".onAddContactPerson"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="{i18n>columnContactType}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnName}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnSurname}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnPhone}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnFax}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnEmail}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Select
						enabled="{view>/enabled/secondary}"
						selectedKey="{customer>contactType}"
						forceSelection="false"
						items="{ path: 'contactTypes>/', templateShareable: false }"
						width="100%">
						<core:Item key="{contactTypes>key}" text="{contactTypes>key}"/>
					</Select>
					<Input enabled="{view>/enabled/secondary}" value="{customer>name}"/>
					<Input enabled="{view>/enabled/secondary}" value="{customer>surname}"/>
					<Input enabled="{view>/enabled/secondary}" value="{customer>phone}"/>
					<Input enabled="{view>/enabled/secondary}" value="{customer>fax}"/>
					<Input enabled="{view>/enabled/secondary}" value="{customer>email}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
