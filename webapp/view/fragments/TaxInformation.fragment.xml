<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	xmlns:microchart="sap.suite.ui.microchart">
	<Table 
		mode="None"
		items="{taxInformations>/}"
		visible="{view>/show/salesFields}">
		<columns>
			<Column>
				<Text text="{i18n>columnTaxCountry}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnTaxCategory}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnTaxClassification}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{taxInformations>taxCountry}"/>
					<Text text="{taxInformations>taxCategory}"/>
					<Select
						enabled="{view>/enabled/secondary}"
						selectedKey="{taxInformations>taxClassification}"
						items="{ path: 'taxClasifications>/', templateShareable: false }">
						<core:Item key="{taxClasifications>key}" text="{taxClasifications>text}"/>
					</Select>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
