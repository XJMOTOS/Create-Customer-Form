<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:forms="sap.ui.layout.form"
	xmlns:microchart="sap.suite.ui.microchart">
	<forms:SimpleForm
		labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
		emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0"
		columnsXL="2" columnsL="1" columnsM="1"
		editable="false"
		layout="ResponsiveGridLayout"
		adjustLabelSpan="false"
		singleContainerFullSize="false">
		<forms:content>
			<Label
				class="sapUiTinyMarginTop"
				text="{i18n>lblHierarchyA} 1"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA1}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Text class="sapUiTinyMarginTopBottom" text="{customer>/hierarchy/a1Text}"/>
			</HBox>

			<Label
				text="{i18n>lblHierarchyA} 2"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA2}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Text class="sapUiTinyMarginTopBottom" text="{customer>/hierarchy/a2Text}"/>
			</HBox>

			<Label
				text="{i18n>lblHierarchyA} 3"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA3}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Text class="sapUiTinyMarginTopBottom" text="{customer>/hierarchy/a3Text}"/>
			</HBox>

			<Label
				text="{i18n>lblHierarchyA} 4"
				class="sapUiTinyMarginTop"/>
			<HBox>
				<core:Icon
					src="sap-icon://hint"
					decorative="false"
					class="sapUiTinyMarginTop sapUiTinyMarginEnd"
					tooltip="{i18n>tooltipHierarchyA4}">
					<core:layoutData>
						<FlexItemData growFactor="0"/>
					</core:layoutData>
				</core:Icon>
				<Text class="sapUiTinyMarginTopBottom" text="{customer>/hierarchy/a4Text}"/>
			</HBox>
		</forms:content>
	</forms:SimpleForm>
</core:FragmentDefinition>
